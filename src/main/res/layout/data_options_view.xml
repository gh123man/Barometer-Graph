<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical" >

    <com.ghsoft.barometergraph.views.ExpanderView
        android:id="@+id/expander"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="Running Average"
                    android:id="@+id/textView"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:text="This value determines the running average size. 1 is raw sensor data."
                    android:layout_below="@id/textView"
                    android:id="@+id/textView1"/>
            </LinearLayout>

            <NumberPicker
                android:id="@+id/picker"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"></NumberPicker>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:text="Graph Auto Scale"
                    android:id="@+id/textView2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="20dp"
                    android:text="Graph will auto scale to data when enabled."
                    android:layout_below="@id/textView"
                    android:id="@+id/textView3"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/auto_scale"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </FrameLayout>

        </LinearLayout>


    </com.ghsoft.barometergraph.views.ExpanderView>

</LinearLayout>